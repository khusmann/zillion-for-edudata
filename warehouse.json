{
  "metrics": [
    {
      "name": "student_mathScore",
      "type": "numeric",
      "aggregation": "mean"
    },
    {
      "name": "student_grade",
      "type": "numeric",
      "aggregation": "mean"
    }
  ],
  "dimensions": [
    {
      "name": "id_student",
      "type": "integer"
    },
    {
      "name": "school_type",
      "type": "string"
    },
    {
      "name": "id_wave",
      "type": "integer"
    },
    {
      "name": "id_school",
      "type": "integer"
    }
  ],
  "datasources": {
    "main": {
      "connect": "sqlite:///data/main.db",
      "tables": {
        "main.schools": {
          "type": "dimension",
          "primary_key": ["id_school"],
          "columns": {
            "id_school": {
              "fields": ["id_school"]
            },
            "school_type": {
              "fields": ["school_type"]
            }
          }
        },
        "main.students": {
          "type": "dimension",
          "parent": "main.schools",
          "primary_key": ["id_student"],
          "columns": {
            "id_student": {
              "fields": ["id_student"]
            },
            "id_school": {
              "fields": ["id_school"]
            }
          }
        },
        "main.waves": {
          "type": "dimension",
          "primary_key": ["id_wave"],
          "columns": {
            "id_wave": {
              "fields": ["id_wave"]
            }
          }
        },
        "main.student_info": {
          "type": "metric",
          "primary_key": ["id_student"],
          "columns": {
            "id_student": {
              "fields": ["id_student"]
            },
            "student_grade": {
              "fields": ["student_grade"]
            }
          }
        },
        "main.student_scores": {
          "type": "metric",
          "primary_key": ["id_student", "id_wave"],
          "columns": {
            "id_student": {
              "fields": ["id_student"]
            },
            "id_wave": {
              "fields": ["id_wave"]
            },
            "student_mathScore": {
              "fields": ["student_mathScore"]
            }
          }
        }
      }
    }
  }
}
